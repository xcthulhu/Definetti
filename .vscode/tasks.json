{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "problemMatcher": {
    "owner": "haskell",
    "fileLocation": ["relative", "${workspaceFolder}"],
    "pattern": [
      {
        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):.*$",
        "file": 1,
        "line": 2,
        "column": 3,
        "severity": 4
      },
      {
        "regexp": "^\\s+(.*)$",
        "message": 1
      }
    ]
  },
  "tasks": [
    {
      "label": "configure",
      "type": "shell",
      "command": "nix-shell",
      "args": ["--run", "\"cabal configure --enable-tests\""]
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cabal",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "cabal",
      "args": ["test", "--show-details=streaming"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
